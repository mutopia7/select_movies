<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/genres.css">
    <title>Genres</title>
</head>
<body>
    <%- include("../partials/header") %>

    <main class="mainGenres">
        <ul>
            <% genres.forEach(genre => { %>
                <li class="genresItem">
                    <h2><%= genre.name %></h2>
                    <ul>
                        <span>Movies:</span>
                        <% genre.movies.forEach(movie => { %>
                            <li> <a href="/movie/<%= movie.id %>" class="refLinks"><%= movie.title %></a></li>
                        <% }) %>
                    </ul>
                </li> 
            <% }); %>
        </ul>
    </main>

    <%- include("../partials/footer") %>
</body>
</html>